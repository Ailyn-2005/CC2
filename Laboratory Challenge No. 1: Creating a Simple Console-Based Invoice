        // Itemized List
        System.out.println("Itemized List:");
        System.out.println("---------------------------------------");
        System.out.println("Item\t\tQuantity\tPrice");
        System.out.println("---------------------------------------");
        System.out.println("Laptop\t\t1\t\t₱50,000.00");
        System.out.println("Mouse\t\t2\t\t₱2,000.00");
        System.out.println("Keyboard\t1\t\t₱5,000.00");
        System.out.println("Monitor\t\t1\t\t₱10,000.00\n");
        System.out.println("System Unit\t\t1\t\t₱15,000.00\n");
        
        System.out.println("---------------------------------------");
